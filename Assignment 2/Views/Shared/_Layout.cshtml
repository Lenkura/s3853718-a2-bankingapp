@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                
                <a class="navbar-brand text-nowrap" asp-area="" asp-controller="Login" asp-action="Index"><img src="~/img/logo.jpg" class="rounded float-left">MCBA</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    @{
                        var isLoggedIn = Context.Session.GetInt32(nameof(Customer.CustomerID)).HasValue;
                    }
                    @if (isLoggedIn)
                    {
                        <ul class="navbar-nav mr-auto p-2 justify-content-start">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Transaction" asp-action="Index">Move Money</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="FILLMEIN" asp-action="Index">My Statements</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="FILLMEIN" asp-action="Index">My Profile</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto p-2 justify-content-end">
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    Logged in as @Context.Session.GetString(nameof(Customer.Name))
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1 ml-auto p-2 justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Assignment_2
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
