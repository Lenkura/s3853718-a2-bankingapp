@model List<Transaction>

@{
    ViewData["Title"] = "History";
}
<h1>Account History</h1>

<h4>Transactions</h4>
<hr />

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x[0].TransactionID)</th>
        <th>@Html.DisplayNameFor(x => x[0].TransactionType)</th>
        <th>@Html.DisplayNameFor(x => x[0].AccountNumber)</th>
        <th>@Html.DisplayNameFor(x => x[0].DestinationAccountNumber)</th>
        <th>@Html.DisplayNameFor(x => x[0].Amount)</th>
        <th>@Html.DisplayNameFor(x => x[0].Comment)</th>
        <th>@Html.DisplayNameFor(x => x[0].TransactionTimeUtc)</th>
    </tr>
    @for(var i = 0; i < 4; i++)
    {
        <tr>
            <td>@Html.DisplayFor(x => x[i].TransactionID)</td>
            <td>@Html.DisplayFor(x => x[i].TransactionType)</td>
            <td>@Html.DisplayFor(x => x[i].AccountNumber)</td>
            <td>@Html.DisplayFor(x => x[i].DestinationAccountNumber)</td>
            <td>@Html.DisplayFor(x => x[i].Amount)</td>
            <td>@Html.DisplayFor(x => x[i].Comment)</td>
            <td>@Html.DisplayFor(x => x[i].TransactionTimeUtc)</td>
        </tr>
    }

</table>

